{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./dist",
    "noUnusedLocals": false
  },
  "include": [
    "src/**/*",
    "e2e/**/*",
    "mock-services/**/*",
    "create-first-admin/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "types": [
    "jest"
  ]
}